function verificarPalindromo(palavra) {
    palavra = palavra.toLowerCase();
    
    let inicio = 0;
    let fim = palavra.length - 1;

    while (inicio < fim) {
        if (palavra[inicio] !== palavra[fim]) {
            return "A palavra não é um palíndromo";
        }
        inicio++;
        fim--;
    }
    return "A palavra é um palíndromo";
}

console.log(verificarPalindromo('radar'));        
console.log(verificarPalindromo('arara'));        
console.log(verificarPalindromo('casa'));         
console.log(verificarPalindromo('Ovo'));          
